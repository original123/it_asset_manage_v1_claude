# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development

# Security Keys (REQUIRED - change in production!)
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database Configuration (REQUIRED)
# For SQLite (development): sqlite:///instance/it_assets_dev.db
# For MySQL: mysql+pymysql://username:password@host:port/dbname?charset=utf8mb4
# For PostgreSQL: postgresql://username:password@host:port/dbname
DATABASE_URL=sqlite:///instance/it_assets_dev.db

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Admin User (for initial setup with flask init-db)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Server Configuration
FLASK_PORT=5001
FLASK_HOST=0.0.0.0
